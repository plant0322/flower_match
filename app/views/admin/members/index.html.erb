<div class="container d-flex flex-row-reverse pt-3">
  <div class="col-9 px-3">

      <!--画像を登録できるようにする-->
      <% @members.each do |member| %>
        <div class="d-flex flex-wrap">
          <div class="col-2 order-1">
            <%= image_tag 'sample', size: '100x100', class: "w-100" %>
          </div>
          <!--詳細-->
          <div class="col-10 order-3 p-1">
            <table class="table table-borderless table-secondary">
              <tr>
                <th>名前</th>
                <td>
                  <%= link_to admin_member_path(member) do %>
                    <%= member.member_full_name %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>ユーザー名（ニックネーム）</th>
                <td>
                  <%= member.nickname %>
                </td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td><%= member.telephone_number.to_s.insert(3, "-").insert(7, "-") %></td>
              </tr>
              <tr>
                <th>会員ステータス</th>
                <td><%= member.is_active %></td>
              </tr>
            </table>
          </div>
        </div>
      <% end %>
    </div>


  <div class="col-3 px-3">
    <%= render 'admin/homes/menu' %>
  </div>
</div>