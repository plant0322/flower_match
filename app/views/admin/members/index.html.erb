<div class="container d-flex flex-row-reverse pt-3">
  <div class="col-9 px-3">
    <!--詳細-->
    <div class="col-12 order-3 p-1">
      <table class="table table-bordered table-light">
        <thead>
          <tr>
            <th>メンバーID</th>
            <th>名前</th>
            <th>ニックネーム</th>
            <th>会員情報</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td>
                <%= member.id %>
              </td>
              <td>
                <%= link_to admin_member_path(member) do %>
                  <%= member.member_full_name %><br>
                  <%= member.member_full_name_kana %>
                <% end %>
              </td>
              <td>
                <%= member.nickname %>
              </td>
              <td>
                TEL: <%= member.telephone_number.to_s.insert(3, "-").insert(7, "-") %><br>
                〒 <%= member.postal_code.to_s.insert(3, "-") %><br>
                <%= member.address %>
              </td>
              <td>
               <% if member.is_active == true %>
                  <span class="text-submit fw-bold">有効</span>
                <% else %>
                  <span class="text-danger fw-bold">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to "◀ 管理画面TOPへ戻る", admin_top_path %>

  </div>
  <div class="col-3 px-3">
    <%= render 'layouts/admin_menu' %>
  </div>
</div>