<div class="container d-flex flex-row-reverse pt-3">
  <div class="col-9 px-3">
    <%= render 'shop/searches/form' %>
    <h2>「<%= @content %>」<span class="h4">を含むショップの検索結果</span><span class="h6">（全<%= @records.count %>件）</span></h2>
    <hr>
    <% if @records.blank? %>
      <p class="lh-lg">
      該当するショップはありません<br>
      <%= link_to '◀ TOPへ戻る', root_path %>
      </p>
    <% else %>
      <%= render 'public/shops/index', shops: @records %>
    <% end %>

    <!--ページネーション-->
    <hr>
    <div class="paginate d-flex align-items-center justify-content-center">
      1件～<% if @records.count < 12 %><%= @records.count %><% else %>12<% end %>件（全<%= @records.count %>件）<span class="pt-2 ps-2"><%= paginate @records, theme: 'bootstrap-5' %></span>
    </div>
    <hr>

  </div>
  <!--左ナビ-->
  <div class="col-3 px-3">
    <%= render 'layouts/admin_menu' %>
    <%= render 'layouts/pickup_menu', pick_up_tags: @pick_up_tags %>
    <%= render 'layouts/homes_menu', tag_rank: @tag_rank %>
  </div>
</div>