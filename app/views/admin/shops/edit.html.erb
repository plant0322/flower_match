<div class="container d-flex flex-row-reverse pt-3">
  <div class="col-9 px-5 mt-5">
    <h2>ショップ情報編集</h2>
    <hr>
    <%= form_with model: @shop, url: admin_shop_path do |f| %>
      <%= render "shop/shared/error_messages", resource: @shop %>
      <h3 class="bg-info p-1 h5">ショップ基本情報</h3>
      <table class="table table-borderless table-light my-3">
        <tr>
          <th class="w-25"><%= f.label :shop_image, "アイキャッチ" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td>
            <%= image_tag @shop.get_shop_image(100,100) %>
          </td>
          <td>
            <%= f.file_field :shop_image, accept: "image/*", class: "form-control" %>
            <small>※ショップのイメージ画像を登録してください</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :name, "ショップ名" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
            <small>例）Flower Shop</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :name_kana, "ショップ名（フリガナ）" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :name_kana, autocomplete: "name_kana", class: "form-control" %>
            <small>例）フラワーショップ</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :introduction, "ショップコメント" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_area :introduction, autocomplete: "introduction", class: "form-control" %>
            <small>例）フラワーアレンジのご要望承ります。</small>
          </td>
        </tr>
      </table>

      <h3 class="bg-info p-1 h5">ショップ所在地情報</h3>
      <table class="table table-borderless table-light my-3">
        <tr>
          <th class="w-25"><%= f.label :postal_code, "ショップの郵便番号" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :postal_code, placeholder: "", autocomplete: "postal_code", class: "form-control" %>
            <small>例）1234567　※ハイフンは不要です</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :address, "ショップの住所" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :direction, "アクセス・道案内" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_area :direction, autocomplete: "direction", class: "form-control" %>
            <small>例）スーパーの向かい側にある白い建物です</small>
          </td>
        </tr>
      </table>

      <h3 class="bg-info p-1 h5">ショップ詳細情報</h3>
      <table class="table table-borderless table-light my-3">
        <tr>
          <th class="w-25"><%= f.label :telephone_number, "電話番号（ショップの連絡先）" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
            <small>例）08000000000　※ハイフンは不要です。</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :opening_hour, "営業時間" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :opening_hour, autocomplete: "opening_hour", class: "form-control" %>
            <small>例）火～日 9:30～18:00</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :holiday, "定休日" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :holiday, autocomplete: "holiday", class: "form-control" %>
            <small>例）月曜日</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :payment_method, "支払方法" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :payment_method, autocomplete: "payment_method", class: "form-control" %>
            <small>例）現金/Visa／Mastercard／JCB／American Express／PayPay</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :note, "備考欄" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_area :note, autocomplete: "note", class: "form-control" %>
          </td>
        </tr>
      </table>

      <h3 class="bg-info p-1 h5">ログイン情報</h3>
      <table class="table table-borderless table-light my-3">
        <tr>
          <th class="w-25"><%= f.label :representative_name, "担当者名" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.text_field :representative_name, autocomplete: "representative_name", class: "form-control" %>
            <small>※担当者名はページ上には表示されません</small>
          </td>
        </tr>
        <tr>
          <th class="w-25"><%= f.label :email, "メール" %><small class="bg-info py-0 px-2 ms-2 rounded-pill fw-normal">必須</small></th>
          <td colspan="2">
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            <small>例）xxx_sample@mail</small>
          </td>
        </tr>
      </table>

      <div class="bg-light p-3 mt-3">
        <p>ショップの会員ステータスを変更する</p>
        <%= f.radio_button :is_active, true, class: "form-check-input" %><%= f.label :is_active, '有効', class: "form-check-label" %>
        <%= f.radio_button :is_active, false, class: "form-check-input" %><%= f.label :is_active, '退会', class: "form-check-label" %>
      </div>

      <div class="d-flex flex-row my-3 mx-auto">
        <div class="col-6 d-grid p-2">
          <%= link_to "ショップ一覧へ戻る", shop_path(@shop), class: "btn btn-outline-info p-2" %>
        </div>
        <div class="col-6 d-grid p-2">
          <%= f.submit "この内容で更新する", class: "btn btn-info p-2" %>
        </div>
      </div>
    <% end %>

  </div>
  <div class="col-3 px-3">
    <%= render 'layouts/admin_menu' %>
  </div>
</div>