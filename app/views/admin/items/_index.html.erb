<table class="table table-bordered">
  <thead>
    <tr class="text-center">
      <th>画像チェック</th>
      <th>公開/非公開</th>
      <th class="w-50">商品</th>
      <th>ショップ</th>
    </tr>
  </thead>
  <tbody>
    <% items. each do |item| %>
      <tr class="<% if item.item_check %><%= (item.item_check.permission == 'confirm' ? "table-confirm" : "" ) %> <%= (item.item_check.permission == 'not_permit' ? "table-not-permit" : "" ) %><% end %>">
        <td>
          <% if item.item_check %>
            <%= form_with model: item.item_check, url: admin_item_item_checks_path(item) do |f| %>
              <%= f.select :permission, ItemCheck.permissions_i18n.invert, { }, {:class => "form-select"} %>
              <%= f.submit '更新する', class: "btn bg-admin mt-2 text-white" %>
            <% end %>
          <% end %>
        </td>
        <td class="text-center">
          <%= link_to item_path(item) do %>
            <%= image_tag item.get_item_image(100,100), class: "hover-img" %>
          <% end %>
          <% if item.is_active %>
            <p class="text-success fw-bold">公開中</p>
          <% else %>
            <p class="text-danger fw-bold">非公開</p>
          <% end %>
        </td>
        <td>
          <%= link_to item_path(item) do %>
            <p class="fw-bold mb-0"><%= item.name %><small>[ <%= item.id %> ]</small></p>
            <small>
              価格: <%= item.price.to_s(:delimited, delimiter: ',') %>円<br>
              在庫: <%= item.stock %>個<br>
            </small>
          <% end %>
          <% item.tags.each do |tag| %>
            <span class="btn btn-outline-secondary disabled rounded-pill px-2 py-0 mb-1">
              # <%= tag.name %>
            </span>
          <% end %>
        </td>
        <td>
          <p class="fw-bold mb-0"><%= item.shop.name %></p>
          <small>（<%= item.shop.name_kana %>）</small>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>