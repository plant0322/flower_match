<div class="container d-flex flex-column pt-3">
  <div class="col-8 mx-auto px-3">
    <h2>ショップ情報編集</h2>
    <hr>
    <%= form_with model: @shop, url: shop_update_information_path do |f| %>
      <%= render "public/shared/error_messages", resource: @shop %>
      <div class="bg-secondary p-3">
        <table class="table table-borderless table-secondary">
          <tbody>
            <tr>
              <th><%= f.label :shop_image, "アイキャッチ" %></th>
              <td>
                <%= image_tag @shop.get_shop_image(100,100) %>
              </td>
              <td class="w-75"><%= f.file_field :shop_image, accept: "image/*", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :name, "ショップ名" %></th>
              <td colspan="2"><%= f.text_field :name, autofocus: true, placeholder: "例）Flower Shop", autocomplete: "name", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :name_kana, "ショップ名（フリガナ）" %></th>
              <td colspan="2"><%= f.text_field :name_kana, placeholder: "例）フラワーショップ", autocomplete: "name_kana", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :representative_name, "担当者" %></th>
              <td colspan="2"><%= f.text_field :representative_name, placeholder: "例）牡丹百合", autocomplete: "representative_name", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :postal_code, "ショップの郵便番号" %></th>
              <td colspan="2"><%= f.text_field :postal_code, placeholder: "例）1234567", autocomplete: "postal_code", class: "form-control" %> ※ハイフンは不要です</td>
            </tr>
            <tr>
              <th><%= f.label :address, "ショップの住所" %></th>
              <td colspan="2"><%= f.text_field :address, placeholder: "例）富山県砺波市0-0", autocomplete: "address", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :direction, "アクセス・道案内" %></th>
              <td colspan="2"><%= f.text_area :direction, placeholder: "例）スーパーの向かい側にある白い建物です", autocomplete: "direction", class: "form-control" %> ※お店の場所を簡単に説明してください</td>
            </tr>
            <tr>
              <th><%= f.label :telephone_number, "電話番号（ショップの連絡先）" %></th>
              <td colspan="2"><%= f.text_field :telephone_number, placeholder: "例）0800000000", autocomplete: "telephone_number", class: "form-control" %> ※ハイフンは不要です</td>
            </tr>
            <tr>
              <th><%= f.label :opening_hour, "営業時間" %></th>
              <td colspan="2"><%= f.text_field :opening_hour, placeholder: "例）火～日 9:30～18：00", autocomplete: "opening_hour", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :holiday, "定休日" %></th>
              <td colspan="2"><%= f.text_field :holiday, placeholder: "例）月曜日", autocomplete: "holiday", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :parking, "駐車場" %></th>
              <td colspan="2"><%= f.text_field :parking, placeholder: "例）駐車場あり（3台分）", autocomplete: "parking", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :payment_method, "支払方法" %></th>
              <td colspan="2"><%= f.text_field :payment_method, placeholder: "例）現金/Visa／Mastercard／JCB／American Express／PayPay", autocomplete: "payment_method", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :introduction, "ショップ紹介文" %></th>
              <td colspan="2"><%= f.text_area :introduction, placeholder: "例）フラワーアレンジのご要望承ります。", autocomplete: "introduction", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :note, "備考欄" %></th>
              <td colspan="2"><%= f.text_area :note, placeholder: "その他", autocomplete: "note", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :email, "メール" %></th>
              <td colspan="2"><%= f.email_field :email, placeholder: "例）xxx_sample@mail", autocomplete: "email", class: "form-control" %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="d-flex flex-row my-3 mx-auto">
        <div class="col-6 d-grid p-2">
          <%= link_to "マイページへ戻る", shop_top_path, class: "btn btn-info p-2" %>
        </div>
        <div class="col-6 d-grid p-2">
          <%= f.submit "この内容で更新する", class: "btn btn-info p-2" %>
        </div>
      </div>
    <% end %>

    <div><%= link_to "退会手続き", shop_confirm_unsubscribe_path %></div>

  </div>
</div>