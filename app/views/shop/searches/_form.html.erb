  <div class="bg-light p-1 mb-3 px-4 pb-2">
    <% if controller_name == 'items' || @type == 'item' || @type == 'item_name' %>
    <!--商品の検索-->
      <%= form_with url: shop_search_path, method: :get do |f| %>
        <div class="mt-3 fw-bold text-secondary">商品を検索<%= f.hidden_field :type, :value => 'item' %></div>
        <div class="d-flex flex-row">
          <div class="col-10 mt-4"><%= f.text_field :content, placeholder: 'キーワードから探す', class: "form-control" %></div>
          <div class="col-2">
       　    <%= button_tag type: 'submit', name: '', class: "form-control" do %>
              <i class="fa-solid fa-magnifying-glass"></i>検索
            <% end %>
          </div>
        </div>
      <% end %>
      <%= form_with url: shop_search_path, method: :get do |f| %>
        <div class="d-flex flex-row">
          <div class="col-3 mt-4">
            <%= f.hidden_field :type, :value => 'item_name' %>
            <%= f.select :method, options_for_select({'商品名の部分一致' => 'partial', '商品名の完全一致' => 'perfect', '商品名の前方一致' => 'forward', '商品名の後方一致' => 'backward'}), {}, {:class => "form-select"} %>
          </div>
          <div class="col-7 mt-4"><%= f.text_field :content, placeholder: '商品名から探す', class: "form-control" %></div>
          <div class="col-2">
       　    <%= button_tag type: 'submit', name: '', class: "form-control" do %>
              <i class="fa-solid fa-magnifying-glass"></i>検索
            <% end %>
          </div>
        </div>
      <% end %>
    <% elsif controller_name == 'pre_orders' || @type == 'order_member' || @type == 'order_item_all' || @type == 'order_item' %>
    <!--予約の検索-->
      <%= form_with url: shop_search_path, method: :get do |f| %>
          <div class="d-flex flex-row mt-4">
            <label class="form-check-label text-secondary fw-bold pe-3"><%= f.radio_button :type, 'order_member', checked: search.type == 'order_member', class: "form-check-input" %> お客様情報から検索</label>
            <label class="form-check-label text-secondary fw-bold pe-3"><%= f.radio_button :type, 'order_item_all', checked: search.type == 'order_item_all', class: "form-check-input" %> 商品情報から検索</label>
          </div>
        <div class="d-flex flex-row">
          <div class="col-10 mt-4"><%= f.text_field :content, placeholder: 'キーワードから探す', class: "form-control" %></div>
          <div class="col-2">
       　    <%= button_tag type: 'submit', name: '', class: "form-control" do %>
              <i class="fa-solid fa-magnifying-glass"></i>検索
            <% end %>
          </div>
        </div>
      <% end %>
      <%= form_with url: shop_search_path, method: :get do |f| %>
        <div class="d-flex flex-row">
          <div class="col-3 mt-4">
            <%= f.hidden_field :type, :value => 'order_item' %>
            <%= f.select :method, options_for_select({'商品名部分一致' => 'partial', '商品名完全一致' => 'perfect', '商品名前方一致' => 'forward', '商品名後方一致' => 'backward'}), {}, {:class => "form-select"} %>
          </div>
          <div class="col-7 mt-4"><%= f.text_field :content, placeholder: '商品名から探す', class: "form-control" %></div>
          <div class="col-2">
       　    <%= button_tag type: 'submit', name: '', class: "form-control" do %>
              <i class="fa-solid fa-magnifying-glass"></i>検索
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %> <!--タグ検索-->
      <div class="col-6">
        <%= f.text_field :content, placeholder: 'キーワードから探す', class: "form-control" %>
      </div>
      <div class="col-2">
        <%= button_tag type: 'submit', name: '', class: "form-control" do %>
          <i class="fa-solid fa-magnifying-glass"></i>検索
        <% end %>
      </div>
    <% end %>
  </div>
