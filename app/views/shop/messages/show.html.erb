<div class="container d-flex flex-row-reverse flex-wrap pt-3">
  <div class="main-content col-9 px-3">
    <h2>
      <% if shop_signed_in? %>
        <%= @room.member.member_full_name %> 様とのメッセージ
      <% else %>
        <%= @room.shop.name %> さんとのメッセージ
      <% end %>
    </h2>
    <hr>
    <% if shop_signed_in? %>
      <%= form_with model: @room, url: shop_message_path do |f| %>
        <div class="d-flex justify-content-center bg-light p-3 mt-3 mb-3">
          <div class="me-3">
            <%= f.radio_button :is_take_care, true, class: "form-check-input" %> <%= f.label :is_take_care, '対応済み', class: "form-check-label text-success fw-bold pe-2" %>
            <%= f.radio_button :is_take_care, false, class: "form-check-input" %> <%= f.label :is_take_care, '対応待ち', class: "form-check-label text-danger fw-bold" %>
          </div>
          <div>
            <%= f.submit "変更する", class: "btn btn-info p-2" %>
          </div>
        </div>
      <% end %>
    <% end %>

    <%= render 'shop/messages/form', messages: @messages, message: @message, url: shop_messages_path %>

  </div>
  <div class="left-content col-3 px-3">
    <%= render 'layouts/shop_menu' %>
    <%= render 'layouts/members_menu' %>
    <%= render 'layouts/pickup_menu', pick_up_tags: @pick_up_tags %>
    <%= render 'layouts/homes_menu', tag_rank: @tag_rank %>
  </div>
</div>