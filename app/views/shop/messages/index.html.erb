<div class="container d-flex flex-row-reverse flex-wrap pt-3">
  <div class="main-content col-9 px-3">
    <h2>新着メッセージ</h2>
    <hr>

    <% @messages.each do |message| %>
      <%= link_to shop_message_path(message.room_id) do %>
        <div class="d-flex flex-row bg-info-subtle p-3 my-3">
          <div class="fw-bold pe-3">
            <% if message.is_a?(MemberMessage) %>
              <div class="btn btn-info hover-none">
              <%= message.created_at.strftime("%Y年%m月%d日") %>
                <%= message.member.member_full_name %> 様
              </div>
              <small><%= message.member.member_full_name %> 様<small>[ <%= message.member.id %> ]</small>から受信:</small>
            <% elsif message.is_a?(ShopMessage) %>
              <div class="btn btn-info hover-none">
                <%= message.created_at.strftime("%Y年%m月%d日") %>
                <%= message.room.member.member_full_name %> 様
              </div>
              <small><%= message.shop.name %> の返信:</small>
            <% end %>
            <%= message.message %>
              <% if message.room.is_take_care %>
                <span class="text-success ps-2">
                  対応済み
                </span>
              <% else %>
                <span class="text-danger ps-2">
                  対応待ち
                </span>
              <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

    <!--ページネーション-->
    <%#= render 'layouts/paginate', content: @messages %>

  </div>
  <div class="left-content col-3 px-3">
    <%= render 'layouts/shop_menu' %>
    <%= render 'layouts/pickup_menu', pick_up_tags: @pick_up_tags %>
    <%= render 'layouts/homes_menu', tag_rank: @tag_rank %>
  </div>
</div>