<div class="container d-flex flex-row-reverse pt-3">
  <div class="col-9 px-3">
    <h1>商品一覧<span class="h5">（全<%= @items.count %>件）</span></h1>
    <hr>
    <%= render 'shop/searches/form' %>

    <%= render 'index', items: @items, item_tags: @item_tags %>

    <!--ページネーション-->
    <hr>
    <div class="paginate d-flex align-items-center justify-content-center">
      1件～<% if @items.count < 12 %><%= @items.count %><% else %>12<% end %>件（全<%= @items.count %>件）<span class="pt-2 ps-2"><%= paginate @items, theme: 'bootstrap-5' %></span>
    </div>
    <hr>

  </div>
  <!--左ナビ-->
  <div class="col-3 px-3">
    <%= render 'layouts/shop_menu' %>
  </div>
</div>