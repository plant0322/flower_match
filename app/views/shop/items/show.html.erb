<div class="container d-flex flex-row-reverse pt-3">
  <div class="col-9">
    <h2>商品詳細</h2>
    <hr>

    <div class="d-flex flex-wrap">
      <!--画像-->
      <div class="col-7 order-1">
        <%= image_tag @item.get_item_image(500,500),class: "w-100 p-1" %>
      </div>
      <!--詳細-->
      <div class="col-5 order-3 p-1">
        <table class="table table-borderless table-secondary">
          <tr>
            <th>商品名</th>
            <td><h1><%= @item.name %></h1></td>
          </tr>
          <tr>
            <th>販売価格</th>
            <td><%= @item.price.to_s(:delimited, delimiter: ',') %>円</td>
          </tr>
          <tr>
          <tr>
            <th>サイズ</th>
            <td><%= @item.size %></td>
          </tr>
          <tr>
            <th>在庫</th>
            <td><%= @item.stock %>個</td>
          </tr>
          <tr>
            <th>キャンセル</th>
            <td><%= @item.deadline %>日前まで</td>
          </tr>
          <tr>
            <th>状態</th>
            <td><%= @item.is_active %></td>
          </tr>
        </table>
      </div>
    </div>
    <!--説明文-->
    <div class="col-12 bg-secondary mt-3 p-3">
      <p><%= @item.introduction %></p>
    </div>
    <div class="col-6 d-grid my-3 mx-auto">
      <%= link_to 'この商品情報を編集する', edit_shop_item_path, class: "btn btn-info p-2" %>
    </div>

  </div>
  <div class="col-3 px-3">
    <%= render 'shop/homes/menu' %>
  </div>
</div>