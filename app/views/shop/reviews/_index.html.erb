<ul class="list-group">
  <% reviews.each do |review| %>
    <li class="list-group-item mb-3">
      <div class="d-flex row p-3 mb-2 bg-light">
        <div class="col-3">
          <%= link_to shop_member_path(review.pre_order.member) do %>
            <p><i class="fa-regular fa-comment-dots"></i><%= review.pre_order.member.member_full_name%> さま</p>
            <p>(ニックネーム: <%= review.pre_order.member.nickname %>)</p>
          <% end %>
        </div>
        <div class="col-9">
         <%= review.content %>
        </div>
      </div>
      <div>
        <small>予約商品: <%= review.pre_order.name %></small>
      </div>
    </li>
  <% end %>
</ul>