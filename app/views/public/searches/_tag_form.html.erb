<%= form_with url: search_path, method: :get do |f| %>
  <div class="d-flex flex-row">
    <%= f.hidden_field :model, value: 'tag' %>
    <div class="col-10">
      <%= f.text_field :content, placeholder: 'タグから探す', class: "form-control" %>
    </div>
    <div class="col-2">
    <%= button_tag type: 'submit', name: '', class: "form-control" do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
   </div>
  </div>
<% end %>