<div class="container d-flex flex-row-reverse flex-wrap pt-3">
  <div class="main-content col-9 px-3">

    <% if @model == 'item' %>
    <!--商品検索-->
      <h2>「<%= @content %>」<span class="h4">を含む商品の検索結果</span><span class="h6">（全<%= @records.count %>件）</span></h2>
      <hr>
      <% if @records.blank? %>
        <p class="lh-lg">
        該当する商品はありません<br>
        <%= link_to '◀ TOPへ戻る', root_path %>
        </p>
      <% else %>
        <%= render 'public/items/index', items: @records %>
      <% end %>

    <% elsif @model == 'shop' %>
    <!--ショップ検索-->
      <h2>「<%= @content %>」<span class="h4">を含むショップの検索結果</span><span class="h6">（全<%= @records.count %>件）</span></h2>
      <hr>
      <% if @records.blank? %>
        <p class="lh-lg">
        該当するショップはありません<br>
        <%= link_to '◀ TOPへ戻る', root_path %>
        </p>
      <% else %>
        <%= render 'public/shops/index', shops: @records %>
      <% end %>

    <% elsif @model == 'tag' %>
    <!--タグ検索-->
      <h2>「<%= @content %>」<span class="h4">を含むタグのついた商品の検索結果</span><span class="h6">（全<%= @records.count %>件）</span></h2>
      <hr>
      <% if @records.blank? %>
        <p class="lh-lg">
          該当する商品はありません<br>
          <%= link_to '◀ TOPへ戻る', root_path %>
        </p>
      <% else %>
        <%= render 'public/items/index', items: @records %>
      <% end %>
      <%= render 'public/searches/tag_btn', tags: @tags %>

    <% end %>
    <!--ページネーション-->
      <%= render 'layouts/paginate', content: @records %>
    <% if @model != 'tag' %>
    <% end %>

  </div>
  <!--左ナビ-->
  <div class="left-content col-3 px-3">
    <%= render 'layouts/members_menu' %>
    <%= render 'layouts/admin_menu' %>
    <%= render 'layouts/shop_menu' %>
    <%= render 'layouts/pickup_menu', pick_up_tags: @pick_up_tags %>
    <%= render 'layouts/homes_menu', tag_rank: @tag_rank %>
  </div>
</div>