<div class="container d-flex flex-column pt-3">
  <div class="col-8 mx-auto px-3">
    <h2>予約情報をご確認ください</h2>
    <hr>
    <!--商品情報-->
    <div class="bg-secondary p-3">
      <table class="table table-borderless table-secondary">
        <tbody>
          <tr>
            <th>来店日時</td>
            <td><%= @pre_order.visit_day %> <%= @pre_order.visit_time %></td>
          </tr>
          <tr>
            <th>予約商品</td>
            <td ><%= @item.name %> <%= @item.price %></td>
          </tr>
          <tr>
            <th>用途</td>
            <td><%= @pre_order.purpose %></td>
          </tr>
          <tr>
            <th>備考</td>
            <td><%= @pre_order.note %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <!--お客さま情報-->
    <div class="bg-secondary p-3">
      <table class="table table-borderless table-secondary">
        <tbody>
          <tr>
            <th>予約者氏名</td>
            <td><%= current_member.last_name %> <%= current_member.first_name %></td>
          </tr>
          <tr>
            <th>予約者連絡先（電話番号）</td>
            <td><%= current_member.telephone_number %></td>
          </tr>
        </tbody>
      </table>
    </div>

  <div class="d-flex flex-row my-3 mx-auto">
    <div class="col-6 d-grid p-2">
      <%= form_with url: new_pre_order_path, method: :get do |f| %>
        <%= f.submit '情報入力へ戻る', class: "btn btn-info p-2" %>
      <% end %>
    </div>
    <div class="col-6 d-grid p-2">
      <%= form_with model: @pre_order, url: pre_orders_path do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.hidden_field :visit_day, value: @pre_order.visit_day %>
        <%= f.hidden_field :visit_time, value: @pre_order.visit_time %>
        <%= f.hidden_field :purpose, value: @pre_order.purpose %>
        <%= f.hidden_field :note, value: @pre_order.note %>
        <%= f.submit "予約を確定する", class: "btn btn-info p-2" %>
      <% end %>
    </div>
  </div>

  </div>
</div>