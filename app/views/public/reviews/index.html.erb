<div class="container d-flex flex-row-reverse pt-3">
  <div class="col-9 px-3">
    <h2><span class="h4">口コミは</span> <%= @reviews.count %><span class="h4"> 件です</span></h2>
    <hr>
    <ul class="list-group">
      <% @reviews.each do |review| %>
        <li class="list-group-item mb-3">
          <%= review.created_at.strftime("%Y年%-m月%-d日") %>
          <div class="d-flex flex-row p-3 mb-2 bg-info-subtle %>">
            <div class="col-5">
                <p><i class="fa-regular fa-comment-dots"></i><%= review.pre_order.member.nickname %> さん</p>
                <% if current_shop == @shop %>
                  <%= link_to shop_member_path(review.pre_order.member) do %>
                    <p>(<%= review.pre_order.member.member_full_name%> さまの投稿)</p>
                  <% end %>
                <% end %>
            </div>
            <div class="col-7">
             <%= review.content %>
            </div>
          </div>
          <div>
            <% if current_shop == @shop || admin_signed_in? %>
            <%= link_to item_path(review.pre_order.item) do %>
              <small>予約商品: <%= review.pre_order.name %></small>
            <% end %>
            <% else %>
              <small>予約商品: <%= review.pre_order.name %></small>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
    <%= link_to '◀ ショップ情報に戻る', shop_path(@shop) %>
  </div>

  <div class="col-3 px-3">
    <%= render 'layouts/members_menu' %>
    <%= render 'layouts/admin_menu' %>
    <%= render 'layouts/shop_menu' %>
    <%= render 'layouts/homes_menu' %>
  </div>
</div>