<div>
  <% reviews.each do |review| %>
    <div class="card mb-3 p-2">
      <span class="text-secondary"><%= review.created_at.strftime("%Y年%-m月%-d日") %></span>
      <div class="d-flex flex-row flex-wrap p-3 mb-2 bg-info-subtle %>">
        <div class="main-content col-5">
          <p class="text-secondary"><i class="fa-regular fa-comment-dots"></i> <%= review.pre_order.member.nickname %> さん</p>
          <% if current_shop == shop %>
            <%= link_to shop_member_path(review.pre_order.member) do %>
              <small>(<%= review.pre_order.member.member_full_name%> さまの投稿)</small>
            <% end %>
          <% end %>
        </div>
        <div class="main-content col-7">
         <%= review.content %>
        </div>
      </div>
      <div>
        <% if current_shop == shop || admin_signed_in? %>
        <%= link_to item_path(review.pre_order.item) do %>
          <small>予約商品: <%= review.pre_order.name %></small>
        <% end %>
        <% else %>
          <small>予約商品: <%= review.pre_order.name %></small>
        <% end %>
      </div>
    </div>
  <% end %>
</div>