<div>
  <table class="table">
    <tr>
      <th class="text-center bg-member <%= (admin_signed_in? || request.path.starts_with?("/admin") ? "bg-admin" : "" ) %> <%= (shop_signed_in? || request.path.starts_with?("/shop/") ? "bg-shop" : "" ) %>">おすすめ商品</th>
    </tr>
    <% pick_up_tags.each do |tag| %>
      <tr class="tr-menu" onclick='window.location="<%= pick_up_tag_path(tag) %>"' role="link">
        <td>
          <%= tag.name %>
        </td>
      </tr>
    <% end %>
  </table>
</div>